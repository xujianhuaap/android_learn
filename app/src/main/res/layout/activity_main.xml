<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
                name="model"
                type="com.skullmind.io.main.MainModel"/>
        <variable
                name="camera_model"
                type="com.skullmind.io.camera.CameraModel"/>
        <variable
                name="vm"
                type="com.skullmind.io.main.MainVM"/>
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <TextView
                android:id="@+id/tv_click_count"
                android:layout_marginTop="@dimen/dimen_main_activity_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text='@{@string/app_str_click_cnt(model.titleCnt,vm.getStatus(camera_model.openStatus))}'/>
        <Button
                android:id="@+id/tv_title"
                android:layout_marginTop="@dimen/dimen_main_activity_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:onClick="@{vm::clickTitle}"
                android:text="@{model.title}"/>
        <Button
                android:id="@+id/tv_jump"
                android:layout_marginTop="@dimen/dimen_main_activity_margin_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:onClick="@{vm::clickToJumpGithub}"
                android:text="@string/app_str_jump_next"/>
        <include layout="@layout/include_cammara_view"
                app:vm="@{vm}"></include>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>